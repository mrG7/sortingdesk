! command -v cfx &>/dev/null 2>&1 \
  && >&2 echo "E: \`cfxÂ´ program not found" \
  && exit 1

set -e

readonly dir_root="$( cd "$( dirname "${BASH_SOURCE[0]}" )"/.. && pwd )"
cd "$dir_root/src/browser/extensions/firefox"

echo "I: building Firefox extension"
cfx xpi >/dev/null
echo "done."
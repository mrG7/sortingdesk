{
  "manifest_version": 2,
  "name": "Sorting Desk",
  "version": "0.2.1",
  "options_page": "src/html/options.html",
  "web_accessible_resources": [
    "lib/*.js",
    "lib/sorting-queue/*.js",
    "lib/sorting-desk/*.js",
    "lib/dossier.js/*.js",
    "shared/src/css/*.css",
    "media/*"
  ],

  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "<all_urls>"
  ],

  "background": {
    "scripts": [ "lib/jquery-2.1.1.min.js",
                 "lib/sorting-common/sorting_common.js",
                 "src/js/extension/config.js",
                 "src/js/extension/background.js" ]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [ "lib/jquery-2.1.1.min.js",
              "lib/sorting-common/sorting_common.js",
              "src/js/content/embed.js" ],
      "css": [ "shared/src/css/theme-default.css",
               "shared/src/css/theme-default-images.css" ]
    }
  ],

  "icons": {
    "128": "shared/media/icons/icon_128.png"
  },

  "browser_action": {
    "default_icon": {
      "38": "shared/media/icons/icon_38.png",
      "19": "shared/media/icons/icon_19.png"
    },
    "default_title": "Sorting Desk"
  },

  "chrome_url_overrides": {
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "description": "Social bookmarking tool for gathering text and images to build reports; alpha prototype built on Dossier Stack"
}

{
  "manifest_version": 2,
  "name": "Sorting Desk",
  "version": "0.2.1",
  "options_page": "src/html/options.html",
  "web_accessible_resources": [
    "lib/*.js",
    "lib/sorting-queue/*.js",
    "lib/sorting-desk/*.js",
    "lib/dossier.js/*.js",
    "shared/src/css/*.css",
    "media/*"
  ],

  "background": {
    "scripts": [ "lib/jquery-2.1.1.min.js",
                 "lib/sorting-common/sorting_common.js",
                 "src/js/extension/config.js",
                 "src/js/extension/background.js" ]
  },

  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "<all_urls>"
  ],

  "icons": {
    "128": "shared/media/icons/icon_128.png"
  },

  "page_action": {
    "default_icon": {
      "19": "shared/media/icons/icon_active_19.png",
      "38": "shared/media/icons/icon_active_38.png"
    },
    "default_title": "Sorting Desk active on this page"
  },

  "chrome_url_overrides": {
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "description": "Social bookmarking tool for gathering text and images to build reports; alpha prototype built on Dossier Stack"
}

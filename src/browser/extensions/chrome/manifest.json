{
  "manifest_version": 2,
  "name": "Sorting Desk",
  "version": "0.1.1",
  "options_page": "html/options.html",
  "web_accessible_resources": [
    "js/content/Ui.js",
    "lib/*.js",
    "lib/SortingQueue/*.js",
    "lib/SortingDesk/*.js",
    "lib/dossier.js/*.js",
    "html/container.html",
    "media/*"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [ "lib/jquery-2.1.1.min.js", "lib/CryptoJS-3.1.2/md5.js", "lib/dossier.js/Dossier.js", "lib/SortingQueue/SortingQueue.js", "lib/SortingDesk/api-live.js", "lib/SortingDesk/SortingDesk.js", "js/content/Ui.js" ],
      "css": [ "css/theme-default.css" ]
    }
  ],

  "background": {
    "scripts": [ "lib/jquery-2.1.1.min.js", "js/extension/config.js", "js/extension/background.js" ]
  },

  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "<all_urls>"
  ],

  "icons": {
    "128": "icon_128.png"
  },

  "browser_action": {
    "default_icon": {
    },
    "default_title": "Sorting Desk"
  },

  "chrome_url_overrides": {
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "description": "Social bookmarking tool for gathering text and images to build reports; alpha prototype built on Dossier Stack"
}
